<?xml version="1.0" encoding="utf-8"?>

<config>
    <global>
        <logfileRootDir>D:\lisa\TestResults</logfileRootDir>
        <defaultSnapshot>ICABase</defaultSnapshot>
        <email>
            <recipients>
                <to>myboss@mycompany.com</to>
                <to>myself@mycompany.com</to>
            </recipients>
            <sender>myself@mycompany.com</sender>
            <subject>LISA FTM Test Run on WS2012</subject>
            <smtpServer>mysmtphost.mycompany.com</smtpServer>
        </email>

        <!-- Optional testParams go here -->
    </global>

    <testSuites>
        <suite>
            <suiteName>PerfTeraSort</suiteName>
            <suiteTests>
                <suiteTest>Perf_TeraSort</suiteTest>
            </suiteTests>
        </suite>
    </testSuites>

    <testCases>
        <test>
            <testName>Perf_TeraSort</testName>
            <testScript>confighadoopcluster.sh</testScript>
            <files>remote-scripts/ica/confighadoopcluster.sh</files>
            <timeout>600</timeout>
            <onError>Continue</onError>
            <noReboot>False</noReboot>
            <testparams>
                <param>HADOOP_MASTER_HOSTNAME=hadoopmaster</param>
                <param>RESOURCE_MANAGER_HOSTNAME=hadoopmaster</param>
                <param>SLAVE_HOSTNAMES=hadoopworker1 hadoopworker2</param>
                <param>TERAGEN_RECORDS=100000</param>
            </testparams>
        </test>
    </testCases>

    <VMs>        
	<vm>
            <vmName>HadoopMaster</vmName>
            <hvServer>localhost</hvServer>
            <os>Linux</os>
            <ipv4></ipv4>
            <sshKey>id_rsa.ppk</sshKey>
            <suite>PerfTeraSort</suite>
        </vm>
    </VMs>

</config>